{
  "name": "push-markdown",
  "version": "2.0.0",
  "private": true,
  "description": "将本地markdown推送到WordPress",
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "author": {
    "name": "szx",
    "email": "szy110110@qq.com",
    "url": "https://szx.life"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "pnpm build:main && pnpm build:preload && pnpm build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production pnpm build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "win:compile": "cross-env MODE=production pnpm build && electron-builder build --config .electron-builder.config.js --win",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "pnpm typecheck:main && pnpm typecheck:preload && pnpm typecheck:renderer",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 npx --no-install electron ./scripts/update-electron-vendors.js "
  },
  "dependencies": {
    "core-js": "^3.23.5",
    "dayjs": "^1.11.4",
    "electron-log": "^4.4.8",
    "electron-store": "8.0.2",
    "electron-updater": "5.0.5",
    "filenamify-url": "^2.1.2",
    "front-matter": "^4.0.2",
    "github-markdown-css": "^5.1.0",
    "he": "^1.2.0",
    "highlight.js": "^11.6.0",
    "html-to-text": "8.2.0",
    "js-base64": "^3.7.2",
    "lodash-es": "^4.17.21",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "8.6.4",
    "markdown-it-mathjax3": "^4.3.1",
    "markdown-it-table-of-contents": "^0.6.0",
    "markdown-it-task-checkbox": "^1.0.6",
    "markdown-it-title": "^4.0.0",
    "markdown-it-underline": "^1.0.1",
    "md5-file": "^5.0.0",
    "mermaid": "^9.1.3",
    "metaweblog-api": "^1.2.0",
    "natural-compare-lite": "^1.4.0",
    "request": "^2.88.2",
    "transliteration": "^2.3.5",
    "uslug": "^1.0.4",
    "vue": "^3.2.37",
    "vue-i18n": "^9.1.10"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.36",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/he": "^1.1.2",
    "@types/html-to-text": "^8.1.0",
    "@types/lodash-es": "^4.17.6",
    "@types/markdown-it": "^12.2.3",
    "@types/markdown-it-anchor": "^7.0.0",
    "@types/mermaid": "^8.2.9",
    "@types/natural-compare-lite": "^1.4.0",
    "@types/node": "^18.0.6",
    "@types/request": "^2.48.8",
    "@types/uslug": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "@vitejs/plugin-vue": "3.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "cross-env": "7.0.3",
    "electron": "^19.0.8",
    "electron-builder": "23.1.0",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.20.0",
    "eslint-plugin-html": "^7.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.2.0",
    "happy-dom": "6.0.4",
    "nano-staged": "0.8.0",
    "playwright": "1.23.4",
    "prettier": "^2.7.1",
    "sass": "^1.54.0",
    "simple-git-hooks": "2.8.0",
    "typescript": "^4.7.4",
    "unplugin-auto-expose": "0.0.1",
    "vite": "3.0.2",
    "vue-tsc": "0.39.0"
  },
  "license": "Apache-2.0"
}
